{
    "name": "abc-classroom-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "abc-classroom",
      "abc-classroom-backend"
    ],
    "scripts": {
      "dev:frontend": "cd abc-classroom && npm run dev",
      "dev:backend": "cd abc-classroom-backend && npm run dev",
      "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
      "build:frontend": "cd abc-classroom && npm run build",
      "build:backend": "cd abc-classroom-backend && npm run build",
      "build": "npm run build:frontend && npm run build:backend",
      "start:frontend": "cd abc-classroom && npm run start",
      "start:backend": "cd abc-classroom-backend && npm run start",
      "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\""
    },
    "devDependencies": {
      "concurrently": "^8.2.1"
    }
  }